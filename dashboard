<script>
const ctx = document.getElementById('financeChart').getContext('2d');
new Chart(ctx, {
    type: 'bar',
    data: {
        labels: ['Faturamento', 'Lucro', 'Gastos'],
        datasets: [{
            label: 'Valores em R$',
            data: [12500, 4800, 7700],
            backgroundColor: [
              '#00BFFF',
              '#32CD32',
              '#FF4500'
            ]
        }]
    },
    options: {
      responsive: true,
      scales: {
          y: {
              beginAtZero: true,
              ticks: { color: '#f0f0f0' },
              grid: { color: '#333' }
          },
          x: {
              ticks: { color: '#f0f0f0' },
              grid: { color: '#333' }
          }
      },
      plugins: {
          legend: { labels: { color: '#f0f0f0' } }
      }
    }
});
</script>

